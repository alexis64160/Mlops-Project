{
  "id": null,
  "uid": "ml-model-performance",
  "title": "Performances Modèle ML",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "type": "stat",
      "title": "Modèles Entraînés",
      "targets": [
        {
          "expr": "trained_models",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 3 },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "orange", "value": 5 },
              { "color": "green", "value": 10 }
            ]
          }
        }
      }
    },
    {
      "type": "gauge",
      "title": "Précision Validation (Meilleure)",
      "targets": [
        {
          "expr": "best_val_accuracy",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 3 },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0.5 },
              { "color": "orange", "value": 0.7 },
              { "color": "green", "value": 0.9 }
            ]
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Temps d'Entraînement Moyen",
      "targets": [
        {
          "expr": "average_training_time_seconds",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 3, "w": 12, "h": 6 },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 3600 },
              { "color": "yellow", "value": 7200 },
              { "color": "red", "value": 14400 }
            ]
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Temps d'Entraînement (10 Derniers)",
      "targets": [
        {
          "expr": "last_10_avg_training_time_seconds",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 9, "w": 12, "h": 6 },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 3600 },
              { "color": "yellow", "value": 7200 },
              { "color": "red", "value": 14400 }
            ]
          }
        }
      }
    }
  ],
  "annotations": {
    "list": []
  },
  "templating": {
    "list": []
  }
}
