{
  "id": null,
  "uid": "airflow-stats",
  "title": "Airflow DAG & Task Stats",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "type": "stat",
      "title": "Total DAG Runs (Success)",
      "targets": [
        {
          "expr": "sum(dags_success)",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 3 }
    },
    {
      "type": "stat",
      "title": "Total DAG Runs (Failed)",
      "targets": [
        {
          "expr": "sum(dags_failed)",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 3 }
    },
    {
      "type": "stat",
      "title": "Running DAGs",
      "targets": [
        {
          "expr": "sum(dags_running)",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 3, "w": 6, "h": 3 }
    },
    {
      "type": "stat",
      "title": "DAG Avg Duration (Last 10)",
      "targets": [
        {
          "expr": "avg(dags_duration_avg_last_10)",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 6, "y": 3, "w": 6, "h": 3 },
      "unit": "s"
    },
    {
      "type": "stat",
      "title": "Total DAG Executions",
      "targets": [
        {
          "expr": "sum(dags_executions_count)",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 6, "w": 6, "h": 3 }
    },
    {
      "type": "stat",
      "title": "Total Task Successes",
      "targets": [
        {
          "expr": "sum(tasks_success)",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 9, "w": 6, "h": 3 }
    },
    {
      "type": "stat",
      "title": "Total Task Failures",
      "targets": [
        {
          "expr": "sum(tasks_failed)",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 6, "y": 9, "w": 6, "h": 3 }
    },
    {
      "type": "stat",
      "title": "Running Tasks",
      "targets": [
        {
          "expr": "sum(tasks_running)",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 12, "w": 6, "h": 3 }
    },
    {
      "type": "stat",
      "title": "Task Avg Duration (Last 10)",
      "targets": [
        {
          "expr": "avg(tasks_duration_avg_last_10)",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 6, "y": 12, "w": 6, "h": 3 },
      "unit": "s"
    },
    {
      "type": "stat",
      "title": "Total Task Executions",
      "targets": [
        {
          "expr": "sum(tasks_executions_count)",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 15, "w": 6, "h": 3 }
    }
  ]
}